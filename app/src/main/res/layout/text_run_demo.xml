<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_star">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="100dp">

        <app.rive.runtime.kotlin.RiveAnimationView
            android:id="@+id/onboarding_part_1_unfont"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            app:riveFit="COVER"
            app:riveResource="@raw/onboarding_part_1_unfont" />

        <app.rive.runtime.kotlin.RiveAnimationView
            android:id="@+id/onboarding_part_1_with_font"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            app:riveFit="COVER"
            app:riveResource="@raw/onboarding_part_1_with_font" />

        <app.rive.runtime.kotlin.RiveAnimationView
            android:id="@+id/untitled"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            app:riveFit="COVER"
            app:riveResource="@raw/untitled" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>
